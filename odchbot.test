#!/usr/bin/perl

use strict;
use warnings;
use Cwd 'abs_path';
use File::Basename;
use Module::Load;
use FindBin;
use lib "$FindBin::Bin";

my ( $file, $cwd ) = fileparse( abs_path(__FILE__) );
my @files = glob($cwd . '*.pm');
push(@files, glob($cwd . 'commands/*.pm'));

for (@files) {
  # Load all files for perl to check for syntax
  load $_;
}



